@model Burger.WEBUI.Areas.Admin.Models.VMs.CreateUpdateMenuVM

<h4>CreateUpdateMenuVM</h4>
<hr />
<div class="container">
    <div class="row justify-content-end">
        <div class="col-10">
            <form asp-action="@ViewBag.Title" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Photo" class="control-label"></label>
                    <input asp-for="Photo" type="file" name="file" class="form-control-file" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                @* <div class="form-group">
                    @Html.DropDownList("Id", , "Seçiniz", new {@class="form-control"})
                </div> *@
                <div class="form-group mt-2">       
                    <label>Hamburgerler</label>    
                    @Html.DropDownList("selectedHamburger", new SelectList(Model.Hamburgers, "Id", "Name"), "Hamburger Seçiniz", new { @class = "form-control" })
                </div>
                <div class="form-group mt-2">
                    <label>İçecekler</label>
                    @Html.DropDownList("selectedDrink", new SelectList(Model.ByProductsDrinks, "Id", "Name"), "İçecek Seçiniz", new { @class = "form-control" })
                </div>
                <div class="form-group mt-2">
                    <label>Çıtırlar</label>
                    @Html.DropDownList("selectedFry", new SelectList(Model.ByProductsFries, "Id", "Name"), "Çıtır Seçiniz", new { @class = "form-control" })
                </div>
                <div class="form-group mt-2">
                    <label>Sos-1</label>
                    @Html.DropDownList("selectedSauce1", new SelectList(Model.ByProductsSauces, "Id", "Name"), "Sos Seçiniz", new { @class = "form-control" })
                </div>
                <div class="form-group mt-2">
                    <label>Sos-2</label>
                    @Html.DropDownList("selectedSauce2", new SelectList(Model.ByProductsSauces, "Id", "Name"), "Sos Seçiniz", new { @class = "form-control" })
                </div>









                <div class="form-group mt-2">
                    <input type="submit" value="@ViewBag.baslik" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

