@using Burger.DATA.Concrete
@using Burger.DATA.Enums
@model List<ByProduct>

<div class="container">
    <div class="row justify-content-end">
        <div class="col-10">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">@ViewBag.baslik Adı</th>
                        <th scope="col">@ViewBag.baslik Resmi</th>
                        <th scope="col">Açıklama</th>
                        <th scope="col">Fiyat</th>
                        @* <th scope="col">Price</th> *@
                        <th scope="col">Status</th>
                        <th scope="col">Güncelle / Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (ByProduct item in Model)
                        {
                            if (item.ByProductType == ViewBag.type)
                            {
                                <tr>
                                    <th scope="row">@item.Name</th>
                                    <td><img src="@item.Photo" style="width:100px; height:100px; object-fit:cover;" /></td>
                                    <td>@item.Description</td>
                                    <td>@item.Price ₺</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <a class="btn btn-success" asp-route-id=@item.Id asp-controller="@ViewBag.controller" asp-action="Update">Güncelle</a>
                                        <a class="btn btn-danger" asp-route-id=@item.Id asp-controller="@ViewBag.controller" asp-action="Delete">Sil</a>
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
            <a class="btn btn-primary" asp-controller="@ViewBag.controller" asp-action="Create">@ViewBag.baslik Ekle</a>
        </div>
    </div>
</div>
