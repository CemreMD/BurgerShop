@model ConfirmationCodeVm
@{
    Layout = "_Layout";
    ViewData["Title"] = "Confirmation";
}

<h1>Confirmation</h1>
<br />
<br />
<br />
<br />

<form method="post" asp-action="Confirmation" asp-controller="Home">
    <div class="form-group">
        <label asp-for="ConfirmationCode" class="control-label"></label>
        <input asp-for="ConfirmationCode" class="form-control" />
        <span asp-validation-for="ConfirmationCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
